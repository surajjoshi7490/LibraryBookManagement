@model LibraryBookManagement.Models.Book

@{
    ViewData["Title"] = "Edit Book";
}

<h2 class="mb-4">✏️ Edit Book</h2>

<div class="card shadow p-4">
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control" placeholder="Enter book title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Author" class="form-label"></label>
            <input asp-for="Author" class="form-control" placeholder="Enter author name" />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ISBN" class="form-label"></label>
            <input asp-for="ISBN" maxlength="13" class="form-control" placeholder="13-digit ISBN" />
            <span asp-validation-for="ISBN" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="PublishedYear" class="form-label"></label>
            <input asp-for="PublishedYear" class="form-control" placeholder="e.g. 2020" />
            <span asp-validation-for="PublishedYear" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Genre" class="form-label"></label>
            <input asp-for="Genre" class="form-control" placeholder="e.g. Fiction, Biography" />
            <span asp-validation-for="Genre" class="text-danger"></span>
        </div>

        <!-- ✅ Added Detail field -->
        <div class="mb-3">
            <label asp-for="Detail" class="form-label"></label>
            <textarea asp-for="Detail" class="form-control" rows="4" placeholder="Enter additional book details"></textarea>
            <span asp-validation-for="Detail" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">← Back to List</a>
            <button type="submit" class="btn btn-primary">Update Book</button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
