@model LibraryBookManagement.Models.Book

@{
    ViewData["Title"] = "Delete Book";
}

<h2 class="mb-4 text-danger">üóëÔ∏è Delete Book</h2>

<div class="card border-danger shadow p-4">
    <p class="mb-3 fw-semibold">Are you sure you want to delete this book?</p>

    <ul class="list-group mb-4">
        <li class="list-group-item"><strong>Title:</strong> @Model.Title</li>
        <li class="list-group-item"><strong>Author:</strong> @Model.Author</li>
        <li class="list-group-item"><strong>Genre:</strong> @Model.Genre</li>
        <li class="list-group-item"><strong>Published Year:</strong> @Model.PublishedYear</li>
        <li class="list-group-item"><strong>ISBN:</strong> @Model.ISBN</li>
    </ul>

    <form asp-action="Delete" method="post" class="d-flex justify-content-between">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
    </form>
</div>
