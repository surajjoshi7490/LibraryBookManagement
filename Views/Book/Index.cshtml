@model IEnumerable<LibraryBookManagement.Models.Book>
@{
    ViewData["Title"] = "Book List";
    var currentSearch = Context.Request.Query["searchString"].ToString();
    var currentSort = Context.Request.Query["sortOrder"].ToString();
}

<h2>ğŸ“š Book List</h2>

<!-- âœ… Search and Sort Bar -->
<form asp-action="Index" method="get" class="d-flex justify-content-between align-items-center mb-3 flex-wrap">
    <div class="d-flex flex-wrap gap-2 mb-2">
        <input type="text" name="searchString" class="form-control" placeholder="ğŸ” Search Title or Author"
            value="@currentSearch" />
        <button type="submit" class="btn btn-outline-primary">Filter</button>
        @if (!string.IsNullOrEmpty(currentSearch))
        {
            <a asp-action="Index" class="btn btn-outline-secondary">Clear</a>
        }
    </div>

    <div class="d-flex gap-2">
    <select name="sortOrder" class="form-select" onchange="this.form.submit()">
        @if ((ViewData["CurrentSort"] as string) == "")
        {
            <option value="" selected="selected">ğŸ“… Recently Added</option>
        }
        else
        {
            <option value="">ğŸ“… Recently Added</option>
        }

        @if ((ViewData["CurrentSort"] as string) == "title")
        {
            <option value="title" selected="selected">ğŸ”¤ Title (Aâ€“Z)</option>
        }
        else
        {
            <option value="title">ğŸ”¤ Title (Aâ€“Z)</option>
        }

        @if ((ViewData["CurrentSort"] as string) == "author")
        {
            <option value="author" selected="selected">âœï¸ Author (Aâ€“Z)</option>
        }
        else
        {
            <option value="author">âœï¸ Author (Aâ€“Z)</option>
        }
    </select>

    <a asp-action="Create" class="btn btn-success">â• Add New Book</a>
</div>

</form>

<!-- âœ… No Results -->
@if (!Model.Any())
{
    <div class="alert alert-danger">No books found for "<strong>@currentSearch</strong>"</div>
}

<!-- âœ… Book Table -->
<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>ISBN</th>
            <th>Published Year</th>
            <th>Genre</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Author</td>
                <td>@item.ISBN</td>
                <td>@item.PublishedYear</td>
                <td>@item.Genre</td>
                <td class="d-flex gap-1 flex-wrap">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>
